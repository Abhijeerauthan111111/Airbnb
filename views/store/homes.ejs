<%- include('../partials/head.ejs') %>
</head>
<body class="min-h-screen bg-gradient-to-b from-slate-50 to-slate-100 text-gray-900">
      
     <%- include('../partials/nav.ejs')%>

    <main class="container mx-auto px-4 py-16">
        <div class="text-center mb-16">
            <div class="text-9xl mb-8 animate-bounce filter drop-shadow-lg">üè°</div>
            <h1 class="font-serif md:text-5xl text-2xl font-extrabold text-rose-600 md:mb-8 mb-4 tracking-tight leading-tight">
                Discover Your Dream Home
            </h1>
            <p class="text-gray-600 md:text-lg text-xs max-w-2xl mx-auto">Find the perfect place to call home from our carefully curated selection of beautiful properties.</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <% homes.forEach(home => { %>
                <div class="bg-white backdrop-blur-sm bg-opacity-90 rounded-2xl overflow-hidden hover:shadow-2xl transition-all duration-300 flex flex-col p-6 border border-gray-200">
                    <a href="/homes/<%= home._id %>" >
                        <div class="overflow-hidden rounded-2xl mb-6">
                            <% if (home.status === 'booked') { %>  
                                <div class="relative">
                                    <img src="<%= home.photourl %>" alt="Home Image" class="w-full h-64 object-cover hover:scale-105 transition-transform duration-700 filter grayscale">
                                    <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
                                        <span class="text-white  md:text-2xl text-l animate-pulse font-bold">NOT AVAILABLE</span>
                                    </div>
                                </div>
                            <% } else { %>
                                <img src="<%= home.photourl %>" alt="Home Image" class="w-full h-64 object-cover hover:scale-105 transition-transform duration-700">
                            <% } %>
                        </div>

                    <h1 class="text-2xl font-bold text-gray-800 mb-3 text-left hover:text-rose-600 transition-colors">
                        <%= home.housename %>
                    </h1>

                    <p class="text-yellow-500 mb-3 text-left font-medium flex items-center gap-2">
                        <span class="text-lg">‚≠êÔ∏è</span>
                        <span class="text-gray-700"><%= home.rating %>/5</span>
                    </p>

                    <h2 class="text-gray-700 mb-4 text-left flex items-center gap-2">
                        <span class="text-rose-500">üìç</span>
                        <%= home.location %>
                    </h2>

                    <div class="flex justify-between items-center mt-auto pt-4 border-t border-gray-100">
                        <p class="md:text-3xl text-2xl font-bold text-blue-600">‚Çπ<%= home.price %><span class="md:text-lg text-base font-normal text-gray-500">/Month</span></p>
                        <div class="flex items-end ">
                            <%- include('../partials/add_to_fav',{home:home}) %> 
                            <a href="/homes/<%= home._id %>" 
                               class="font-serif text-xs md:text-base bg-gradient-to-r from-rose-500 to-pink-500 text-white font-semibold rounded-lg ml-4 px-4 py-2 hover:from-rose-600 hover:to-pink-600 transition-all duration-300 shadow-md hover:shadow-lg">
                               View Details
                            </a>
                        </div>
                    </div>
                    </a>
                </div>
            <% }); %>
        </div>
    </main>
</body>
</html>