<%- include('../partials/head.ejs') %>
</head>
<body class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 text-gray-900">
      
     <%- include('../partials/nav.ejs')%>

    <main class="container mx-auto px-4 py-10">
        <div class="text-center mb-12">
            <div class="text-9xl mb-8 animate-bounce filter drop-shadow-lg">🏡</div>
            <h1 class="font-serif md:text-5xl text-2xl font-extrabold text-rose-600 md:mb-8 mb-4 tracking-tight leading-tight">
                Find Your Perfect Stay
            </h1>
            <p class="text-gray-600 md:text-lg text-xs max-w-2xl mx-auto">Book your dream getaway today and experience the comfort, style, and hospitality that makes our properties truly special. Enjoy seamless booking with us!</p>
         
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <% homes.forEach(home => { %>
                <div class="bg-white shadow-lg rounded-xl overflow-hidden hover:shadow-2xl transition-all duration-300 flex flex-col p-6 transform hover:-translate-y-1">
                    <img src="<%= home.photourl %>" alt="Home Image" class="w-full h-56 object-cover mb-4 rounded-lg hover:opacity-90 transition-opacity">
                    <h1 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent mb-2"><%= home.housename %></h1>
                    <p class="text-yellow-500 mb-2 flex items-center gap-1">
                        <span class="text-lg">⭐️</span>
                        <span class="font-medium"><%= home.rating %>/5</span>
                    </p>
                    <h2 class="text-gray-700 mb-3 flex items-center gap-2">
                        <span>📍</span>
                        <span class="font-medium"><%= home.location %></span>
                    </h2>
                    <p class="md:text-3xl text-2xl font-bold text-blue-600">₹<%= home.price %><span class="md:text-lg text-base font-normal text-gray-500">/Month</span></p>
                   
                </div>
            <% }); %>
        </div>
    </main>
</body>
</html>
