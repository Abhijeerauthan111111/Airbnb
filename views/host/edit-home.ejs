<%- include('../partials/head.ejs') %>

</head>
<body class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100">
      
     <%- include('../partials/nav.ejs') %>

    <main class="container mx-auto px-4 py-16">
        <div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-lg p-8">
            <div class="text-center">
                <div class="text-9xl mb-8 animate-bounce filter drop-shadow-lg">üè°</div>
            <h1 class="font-serif md:text-5xl text-2xl font-extrabold text-rose-600 md:mb-8 mb-4 tracking-tight leading-tight">
              
                <%= editing ? "Edit" : "Add"%> Your Home
            </h1>
                
            </div>

            <form action="/host/<%= editing ? `edit-home` : `add-home`%>" method="POST" class="space-y-6" enctype="multipart/form-data">
                <input type="hidden" name="id" value="<%= editing ? home._id : `` %>">
               
                <div class="space-y-4">
                    <input type="text"
                        placeholder="Name of your house"
                        name="housename"
                        value="<%= editing ? home.housename : `` %>"
                        class="w-full px-4 py-3 bg-gray-50 text-gray-900 rounded-xl border border-gray-200 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200 hover:bg-white"
                        >

                    <input type="text"
                        placeholder="Daily rent of your home"
                        name="price"
                        value="<%= editing ? home.price : `` %>"
                        class="w-full px-4 py-3 bg-gray-50 text-gray-900 rounded-xl border border-gray-200 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200 hover:bg-white"
                        >

                    <input type="text"
                        placeholder="Where is your home"
                        value="<%= editing ? home.location : `` %>"
                        name="location"
                        class="w-full px-4 py-3 bg-gray-50 text-gray-900 rounded-xl border border-gray-200 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200 hover:bg-white"
                        >

                    <input type="text"
                        placeholder="Rating of the house"
                        name="rating"
                        value="<%= editing ? home.rating : `` %>"
                        class="w-full px-4 py-3 bg-gray-50 text-gray-900 rounded-xl border border-gray-200 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200 hover:bg-white"
                        >

                    <input type="file"
                        name="photo"
                        class="w-full px-4 py-3 bg-gray-50 text-gray-900 rounded-xl border border-gray-200 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200 hover:bg-white"
                    />
                    
                      

                    <input type="text"
                        placeholder="Features of your house"
                        name="features"
                        value="<%= editing ? home.features : `` %>"
                        class="w-full px-4 py-3 bg-gray-50 text-gray-900 rounded-xl border border-gray-200 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200 hover:bg-white"
                        >

                    <textarea
                        placeholder="Description of your house"
                        name="description"
                        class="w-full px-4 py-3 bg-gray-50 text-gray-900 rounded-xl border border-gray-200 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200 hover:bg-white h-32 resize-none"
                        ><%= editing ? home.description : `` %></textarea>
                </div>
                
                <button type="submit" 
                    class="w-full font-serif md:px-6 px-3 md:py-4 py-2  font-semibold  bg-gradient-to-r from-rose-500 to-pink-500 text-white  rounded-lg hover:from-rose-600 hover:to-pink-600 transition-all duration-300 shadow-md hover:shadow-lg text-xs md:text-base">
                    <%= editing ? "Update" : "Add"%> Home
                </button>
            </form>
        </div>
    </main>
</body>
</html>
